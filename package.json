{
  "name": "dViewer",
  "version": "0.1.3",
  "description": "Image Viewer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "build -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egg303/viewer.git"
  },
  "author": "egg303",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/egg303/viewer/issues"
  },
  "homepage": "https://github.com/egg303/viewer#readme",
  "dependencies": {
    "ajv": "^6.5.5",
    "electron-log": "^2.2.17",
    "electron-updater": "^3.2.2"
  },
  "devDependencies": {
    "electron": "^3.0.8",
    "electron-builder": "^20.33.2"
  },
  "build": {
    "appId": "com.github.egg303.viewer",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/installerIcon.ico",
      "installerHeader": "build/installerHeader.bmp",
      "installerHeaderIcon": "build/installerHeaderIcon.ico",
      "installerSidebar": "build/installerSidebar.bmp",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": false
    },
    "files": [
      "**/*",
      "!media/*",
      "!feature.bug"
    ]
  }
}
